<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".MainActivity">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="35sp"
        android:textColor="#DF0000"
      android:text="Welcome to the " />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150sp"
        tools:ignore="ContentDescription"
        android:src="@drawable/ddlogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="35sp"
        android:textColor="#DF0000"
        android:text="Name Generator" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/name_gen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardview_dark_background"
            android:layout_marginTop="10sp"
            android:textColor="#DF0000"
            android:layout_centerHorizontal="true"
            android:text="Generate Name"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="130sp"
            android:layout_height="200sp"
            android:layout_marginTop="60sp"
            tools:ignore="ContentDescription"
            android:src="@drawable/dndwoman" />

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@drawable/dndman"
            tools:ignore="ContentDescription"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25sp" />

        <Button
            android:id="@+id/dice_roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DF0000"
            android:backgroundTint="@color/cardview_dark_background"
            android:gravity="center"
            android:text="Dice Roll"
            android:layout_marginTop="80sp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25sp" />

        <Button
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="159dp"
            android:textColor="#DF0000"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="Notes"
            android:layout_marginTop="150sp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:layout_marginStart="40sp"
            android:textColor="#DF0000"
            android:text="Credits"
            android:backgroundTint="@color/cardview_dark_background"
            android:textSize="30sp" />

        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textSize="30sp"
            android:layout_marginEnd="40sp"
            android:textColor="#DF0000"
            android:backgroundTint="@color/cardview_dark_background"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>